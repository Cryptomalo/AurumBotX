# AurumBotX - Environment Variables
# Copia questo file in .env e inserisci le tue API keys

# ===== MEXC Exchange =====
MEXC_API_KEY=your_mexc_api_key_here
MEXC_API_SECRET=your_mexc_api_secret_here

# ===== Bybit Exchange (alternativa) =====
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# ===== OKX Exchange (alternativa) =====
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_api_secret_here

# ===== OpenAI API (per AI trading) =====
OPENAI_API_KEY=your_openai_api_key_here

# ===== Telegram Alerts (opzionale) =====
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===== Email Alerts (opzionale) =====
EMAIL_ADDRESS=your_email@example.com
EMAIL_PASSWORD=your_email_password_here
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# ===== Trading Mode =====
DEMO_MODE=true
# Imposta a false per trading reale!

# ===== Logging =====
LOG_LEVEL=INFO
# DEBUG, INFO, WARNING, ERROR, CRITICAL
