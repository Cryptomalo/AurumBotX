modules = ["python-3.11", "postgresql-16", "python3"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "streamlit run app.py"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
